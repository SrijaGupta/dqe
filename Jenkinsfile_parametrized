pipeline {
    agent any

    // First time pipeline is build, it will not ask for the params and will set default
    // values. Null if not default. However, after first time, it will let you introduce 
    // or select them.
    parameters {
        booleanParam(defaultValue: true, description: 'True/False', name: 'userFlag')
        string(defaultValue: "ACX2000", description: 'Device Group', name: 'deviceGroup')
        choice(choices: ['ABC', 'XYZ'], description: 'Which file?', name: 'file')
    }

    stages {
        stage("Params") {
            steps {
                echo "User Flag: ${params.userFlag}"
                echo "Device Group: ${params.deviceGroup}"
                echo "File: ${params.file}"
            }
        }
    }
}